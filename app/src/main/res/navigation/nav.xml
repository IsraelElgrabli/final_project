<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/simpleLoginFragment">

    <!-- LOGIN -->
    <fragment
        android:id="@+id/simpleLoginFragment"
        android:name="com.example.final_project.ui.fragments.LoginFragment"
        android:label="Login">

        <!-- ✅ the flag is declared on the DESTINATION (Login), not on the action -->
        <argument
            android:name="fromLogout"
            app:argType="boolean"
            android:defaultValue="false" />

        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/simpleRegisterFragment" />

        <action
            android:id="@+id/action_login_to_feed"
            app:destination="@id/feedFragment"
            app:popUpTo="@id/simpleLoginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- POST DETAIL -->
    <fragment
        android:id="@+id/postDetailFragment"
        android:name="com.example.final_project.ui.fragments.PostDetailFragment"
        android:label="Post Details">
        <argument
            android:name="postId"
            app:argType="string" />
    </fragment>

    <!-- REGISTER -->
    <fragment
        android:id="@+id/simpleRegisterFragment"
        android:name="com.example.final_project.ui.fragments.RegisterFragment"
        android:label="Register">

        <action
            android:id="@+id/action_register_to_feed"
            app:destination="@id/feedFragment"
            app:popUpTo="@id/simpleRegisterFragment"
            app:popUpToInclusive="true" />

        <!-- ✅ New action to go back to login -->
        <action
            android:id="@+id/action_register_to_login"
            app:destination="@id/simpleLoginFragment"
            app:popUpTo="@id/simpleRegisterFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- FEED -->
    <fragment
        android:id="@+id/feedFragment"
        android:name="com.example.final_project.ui.fragments.FeedFragment"
        android:label="Feed">
        <action
            android:id="@+id/action_feedFragment_to_postDetailFragment"
            app:destination="@id/postDetailFragment" />
    </fragment>

    <!-- CREATE -->
    <fragment
        android:id="@+id/createPostFragment"
        android:name="com.example.final_project.ui.fragments.CreatePostFragment"
        android:label="Create" />

    <!-- PROFILE -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.final_project.ui.fragments.ProfileFragment"
        tools:layout="@layout/fragment_profile">

        <!-- ✅ Action to go back to login -->
        <action
            android:id="@+id/action_profileFragment_to_simpleLoginFragment"
            app:destination="@id/simpleLoginFragment" />

        <!-- ✅ NEW: Action to go to post detail from profile -->
        <action
            android:id="@+id/action_profileFragment_to_postDetailFragment"
            app:destination="@id/postDetailFragment" />
    </fragment>

</navigation>
