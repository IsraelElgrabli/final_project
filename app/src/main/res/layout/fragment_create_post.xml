<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF4E3"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Image preview box -->
        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerInside"
            android:contentDescription="Image preview"
            android:background="#EBC48B"
            android:src="@drawable/ic_camera_outline"
            android:padding="24dp"
            android:layout_marginBottom="12dp"
            android:adjustViewBounds="true" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- Existing UI here -->
            </LinearLayout>

            <!-- Spinner overlay -->
            <ProgressBar
                android:id="@+id/uploadSpinner"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />
        </FrameLayout>

        <!-- Upload photo button -->
        <Button
            android:id="@+id/btnUploadPhoto"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Upload photo"
            android:textColor="#4A2C0A"
            android:textStyle="bold"
            android:background="@drawable/rounded_light_button"
            android:layout_marginBottom="16dp"
            app:backgroundTint="@null" />

        <!-- Title input -->
        <EditText
            android:id="@+id/editTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="title"
            android:textColor="#A57B4D"
            android:textColorHint="#A57B4D"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="@drawable/rounded_edit_outline"
            android:layout_marginBottom="12dp" />

        <!-- Description input -->
        <EditText
            android:id="@+id/editDescription"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_edit_outline"
            android:gravity="top|start"
            android:hint="Add description"
            android:padding="12dp"
            android:textColor="#A57B4D"
            android:textColorHint="#A57B4D" />

        <!-- Post button -->
        <Button
            android:id="@+id/btnPost"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="POST"
            android:textStyle="bold"
            android:textColor="#4A2C0A"
            android:background="@drawable/rounded_post_button"
            app:backgroundTint="@null" />

    </LinearLayout>
</ScrollView>
